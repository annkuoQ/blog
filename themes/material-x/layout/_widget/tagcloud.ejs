<% if (site.tags.length){ %>
  <section class='widget <%- item.widget %>'>
    <%- partial('header', {item: item, defIcon: 'fas fa-tags', defTitle: __('sidebar.tagcloud')}) %>
    <div class='content <%= theme.style %>'>
      <%- tagcloud(site.tags, {
          min_font: 14,
          max_font: 24,
          color: true,
          start_color: item.start_color ? item.start_color : 'rgba(255, 255, 255, 0.8)',
          end_color: item.end_color ? item.end_color : 'rgba(255, 255, 255, 0.8)',
      }) %>
    </div>
  </section>
<% } %>
